@using Nop.Plugin.Payments.Pesapal.Models.Settings
@model PesapalconfigModel

@{
    Layout = "_ConfigurePlugin";
}
@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="Pesapal" asp-action="Configure" method="post">
        <div class="card card-default">
            <div class="card-body">
                <p>
                    You must register a Pesapal account to get the consumer key and secret. <br />
                    1. For Sandbox consumer key and secret use:
                    <a href="https://developer.pesapal.com/how-to-integrate/e-commerce/api-30-json/authentication" target="_blank">pesapal developer</a> <br />
                    2. For production credentials, <b><a href="https://www.pesapal.com/dashboard/account/register" target="_blank">sign up </a></b>, to get the consumer key and secret.<br />
                    3. Consumer key and secret will be mailed to your account email.<a href="https://www.pesapal.com/support/business-account/how-do-i-integrate-pesapal-into-my-website" target="_blank">Read more</a><br />
                    4. Contact Pesapal for account approval.<a href="https://www.pesapal.com/support" target="_blank">support</a><br />
                    <br />
                </p>
                   <div class="form-group row">
                    
                  <nop-nested-setting  disable-auto-generation="true">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="Override_storesandbox" asp-input="UseSandbox" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="UseSandbox" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="UseSandbox" />
                            <span asp-validation-for="UseSandbox"></span>
                        </div>
                    </div>
                      
                      <div class="form-group row">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="Override_storekey" asp-input="Consumer_key" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="Consumer_key" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Consumer_key" asp-required="true" html-attributes="@(new { value = Model.Consumer_key })" />
                            <span asp-validation-for="Consumer_key"></span>
                        </div>
                    </div>

                      
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="Override_storesecret" asp-input="Consumer_secret" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="Consumer_secret" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Consumer_secret" asp-required="true" />
                            <span asp-validation-for="Consumer_secret"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="Override_storecallbackurl" asp-input="Callback_Url" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="Callback_Url" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Callback_Url" asp-required="true" />
                            <span asp-validation-for="Callback_Url"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="Override_storeurl" asp-input="Url" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="Url" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Url" asp-required="true" />
                            <span asp-validation-for="Url"></span>
                        </div>
                    </div>
                    

                    <div class="btn-group" role="group" aria-label="pesapal-config-area">

                        <div class="col-md-9 offset-md-3">
                            <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                        </div>

                        <div class="col-md-9 offset-md-3">
                            <button type="submit" name="revoke" class="btn btn-danger">@T("Plugins.Payments.Pesapal.Configuration.Reset")</button>
                        </div>
                    </div>

                </nop-nested-setting>
               
                  
            </div>
        </div>
        </div>
</form>

